{
  "info": {
    "name": "Poetry Cam Backend",
    "description": "API endpoints for Poetry Cam backend - generates poems from images using Google Gemini AI",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3109",
      "type": "string"
    },
    {
      "key": "testUserId",
      "value": "qFlnnPPnB4PQYlTEDrYkhVQ8bXk2",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Root",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            ""
          ]
        },
        "description": "Simple health check endpoint - returns 'Poetry Cam Backend'"
      },
      "response": []
    },
    {
      "name": "Generate Poem (Form-data)",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "image",
              "type": "file",
              "src": [],
              "description": "Upload a JPEG image file here"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/generate-poem?userid={{testUserId}}&type=dirty-limerick",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "generate-poem"
          ],
          "query": [
            {
              "key": "userid",
              "value": "{{testUserId}}",
              "description": "User ID for poem attribution"
            },
            {
              "key": "type",
              "value": "dirty-limerick",
              "description": "Poem type: dirty-limerick or dirty-haiku"
            }
          ]
        },
        "description": "Upload an image and generate a poem. This method uses multipart form-data. Change 'type' query parameter to 'dirty-haiku' for haiku format."
      },
      "response": []
    },
    {
      "name": "Generate Poem (Binary)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "image/jpeg",
            "type": "text"
          }
        ],
        "body": {
          "mode": "file",
          "file": {
            "src": ""
          }
        },
        "url": {
          "raw": "{{baseUrl}}/generate-poem?userid={{testUserId}}&type=dirty-limerick",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "generate-poem"
          ],
          "query": [
            {
              "key": "userid",
              "value": "{{testUserId}}",
              "description": "User ID for poem attribution"
            },
            {
              "key": "type",
              "value": "dirty-limerick",
              "description": "Poem type: dirty-limerick or dirty-haiku"
            }
          ]
        },
        "description": "Upload an image as raw binary data. This is the method used by the ESP32 hardware. Select 'Body' > 'binary' and choose a JPEG file."
      },
      "response": []
    },
    {
      "name": "Get Last Generated Poem",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/last-data",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "last-data"
          ]
        },
        "description": "Debug endpoint that returns the last poem generated by the server (cached in memory)"
      },
      "response": []
    },
    {
      "name": "Get Poem by Index",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/getPoem?userid={{testUserId}}&index=0",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "getPoem"
          ],
          "query": [
            {
              "key": "userid",
              "value": "{{testUserId}}",
              "description": "User ID to fetch poems for"
            },
            {
              "key": "index",
              "value": "0",
              "description": "Poem index (0 = newest, higher = older)"
            }
          ]
        },
        "description": "Fetch a specific poem by index with navigation context (next/previous poems). Returns currentPoem, nextPoem (newer), and previousPoem (older)."
      },
      "response": []
    },
    {
      "name": "Get Poem List",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/poemList?userid={{testUserId}}&page=1",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "poemList"
          ],
          "query": [
            {
              "key": "userid",
              "value": "{{testUserId}}",
              "description": "User ID to fetch poems for"
            },
            {
              "key": "page",
              "value": "1",
              "description": "Page number (50 poems per page)"
            }
          ]
        },
        "description": "Fetch a paginated list of poems (50 per page) for a specific user, ordered by timestamp descending (newest first)"
      },
      "response": []
    }
  ]
}